<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Weebo{% endblock  %}</title>

        <link rel="stylesheet" type="text/css" href="/static/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/static/css/bootstrap-icons.min.css">

        <link rel="icon" type="image/png" sizes="64x64" href="/static/img/favicon64.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/static/img/favicon32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/static/img/favicon16.png">

        <script>
            // Set theme to the user's preferred color scheme
            function updateTheme() {
                const colorMode = window.matchMedia("(prefers-color-scheme: dark)").matches ?
                    "dark" :
                    "light";
                document.querySelector("html").setAttribute("data-bs-theme", colorMode);
            }
            // Set theme on load
            updateTheme()
            // Update theme when the preferred scheme changes
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', updateTheme)
        </script>

        <style>
            #main-header {
                background-color: rgba(var(--bs-light-rgb), 0.8) !important;
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                -moz-backdrop-filter: blur(10px);
                -ms-backdrop-filter: blur(10px);
                -o-backdrop-filter: blur(10px);
            }
            @media (prefers-color-scheme: dark) {
                #main-header {
                    background-color: rgba(var(--bs-dark-rgb), 0.8) !important;
                }
            }
            .dropdown-menu li {
                position: relative;
            }
            .dropdown-menu .dropdown-submenu {
                display: none;
                position: absolute;
                left: 100%;
                top: -7px;
            }
            .dropdown-menu .dropdown-submenu-left {
                right: 100%;
                left: auto;
            }
            .dropdown-menu > li:hover > .dropdown-submenu {
                display: block;
            }
            .dropdown-item-submenu:after {
                content: "\25B6";
                float: right;
            }
        </style>
    </head>
    <body>
        <header class="p-3 mb-3 border-bottom bg-light sticky-top" id="main-header">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                        <img src="/static/img/logo.svg" alt="" class="bi me-2" width="40" height="32">
                    </a>

                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li>
                            <a href="{{ url_for("conductors.showsList") }}" class="nav-link px-2 link-body-emphasis">Conducteurs</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link px-2 link-body-emphasis dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Configuration</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="{{ url_for("shows.shows") }}">Gestion des émissions</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ url_for("jingles.shows") }}">Gestion des jingles</a>
                                </li>
                                <!--
                                <li>
                                    <a class="dropdown-item dropdown-item-submenu" href="#">Canaux</a>
                                    <ul class="dropdown-menu dropdown-submenu">
                                        <li>
                                            <a class="dropdown-item" href="#">Canaux vidéo</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">Canaux web</a>
                                        </li>
                                    </ul>
                                </li>
                                -->
                            </ul>
                        </li>
                    </ul>

                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Benoît Crauet
                        </a>
                        <ul class="dropdown-menu text-small">
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        {% block content %}{% endblock %}
        

        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <div class="col-md-4 d-flex align-items-center">
                    <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                        <img src="/static/img/logo.svg" alt="" class="bi me-2" width="30" height="24">
                    </a>
                    <span class="mb-3 mb-md-0 text-body-secondary">Weebo par Benoît Crauet</span>
                </div>

                <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                    <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"/></svg></a></li>
                    <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"/></svg></a></li>
                    <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"/></svg></a></li>
                </ul>
            </footer>
        </div>

        <script src="/static/js/jquery.min.js"></script>
        <script src="/static/js/bootstrap.bundle.min.js"></script>
    </body>
</html>